<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/favicon.ico') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            
        {% endblock %}
         <!--jQuery-->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        
        <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />
    </head>
    <body>
        {% block header %}
            <div id="header">
                <h1>Tasks Symfony App</h1>
                {% if app.user %}
                <h3>Welcome: {{ app.user.name ~ ' ' ~ app.user.surname}}</h3>
                {% endif %}
                <ul id="menu">
                    
                    {% if app.user %}
                        <li><a href="{{ path('tasks') }}">Main</a></li>
                        <li><a href="{{ path('my_tasks') }}">My tasks</a></li>
                        <li><a href="{{ path('task_creation') }}">Create Task</a></li>
                        <li class="right"><a href="{{ path('logout') }}">Log Out</a></li>   
                        <!--<li class="right"><a href="" >{{ app.user.name ~ ' ' ~ app.user.surname}}</a></li>-->
                    {% else %}   
                        <li><a href="{{ path('login') }}">Login</a></li>
                        <li><a href="{{ path('register') }}">Sign up</a></li>
                    {% endif %}
                </ul>
            </div>
                <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <footer id="footer"><p>Developed By <a href='mailto:ulisesvil5@hotmail.com'; title="Email Me";>Ulises Villa </a> Â© 2021</p></footer>
        <script type=text/javascript src="{{ asset('assets/js/main.js') }}" defer></script>
    </body>
</html>
